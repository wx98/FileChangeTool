           <!-- 其他 -->
           
           <arg value="-repackageclass com.android.a.a"/>
           
           <!--<arg value="-optimizationpasses 1"/>-->
           <arg value="-ignorewarnings"/>
           <arg value="-dontoptimize"/>
           <arg value="-dontpreverify"/>
           <arg value="-verbose"/>
           
           <arg value="-printmapping ${mapping.map}"/>
        </java>
